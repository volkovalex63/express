html
head
  title show_message
  body
    if(type == error)
      h3(style="color:red") #{message}
    else
      h3 New person,
         |name: #{person.name},
         |age: #{person.age} and,
         |nationality: #{person.nationality} added!
      form(action="/public",method="POST")
        label(for="name") Name:
        input(name="name")
        button(type="submit") Get search
